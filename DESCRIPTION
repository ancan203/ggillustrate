Package: ggillustrate
Title: AI-Powered Chart Transformation
Version: 0.0.0.1000
Authors@R: 
    c(
    person("Nguyen", "Tuan Hiep", email = "nguyen.tuanhiep@example.com", role = c("aut", "cre"")),
